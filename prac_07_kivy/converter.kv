BoxLayout:
    orientation: "vertical"

    BoxLayout:
        orientation: "horizontal"

        TextInput:
            id: miles
            text: app.message

        BoxLayout:
            orientation: "vertical"

            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)

    Button:
        text: "Convert miles to kilometres"
        on_press: app.convert_to_kilometres(int(miles.text))

    Label:
        id: kms
        text: ""