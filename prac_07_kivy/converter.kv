BoxLayout:
    orientation: "vertical"

    BoxLayout:
        orientation: "horizontal"

        TextInput:
            id: miles
            text: app.message
            on_text: app.convert_to_kilometres(miles.text)

        BoxLayout:
            orientation: "vertical"

            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)

